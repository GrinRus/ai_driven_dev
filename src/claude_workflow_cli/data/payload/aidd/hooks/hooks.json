{
  "hooks": {
    "PreCompact": [
      {
        "matcher": "auto|manual",
        "hooks": [
          {
            "type": "command",
            "command": "CLAUDE_PLUGIN_ROOT=\"${CLAUDE_PLUGIN_ROOT:-./aidd}\" CLAUDE_PROJECT_DIR=\"${CLAUDE_PROJECT_DIR:-.}\" claude-workflow context-gc precompact",
            "timeout": 8
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "startup|resume|clear|compact",
        "hooks": [
          {
            "type": "command",
            "command": "CLAUDE_PLUGIN_ROOT=\"${CLAUDE_PLUGIN_ROOT:-./aidd}\" CLAUDE_PROJECT_DIR=\"${CLAUDE_PROJECT_DIR:-.}\" claude-workflow context-gc sessionstart",
            "timeout": 5
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash|Read",
        "hooks": [
          {
            "type": "command",
            "command": "CLAUDE_PLUGIN_ROOT=\"${CLAUDE_PLUGIN_ROOT:-./aidd}\" CLAUDE_PROJECT_DIR=\"${CLAUDE_PROJECT_DIR:-.}\" claude-workflow context-gc pretooluse",
            "timeout": 2
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "CLAUDE_PLUGIN_ROOT=\"${CLAUDE_PLUGIN_ROOT:-./aidd}\" CLAUDE_PROJECT_DIR=\"${CLAUDE_PROJECT_DIR:-.}\" claude-workflow context-gc userprompt",
            "timeout": 2
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "CLAUDE_PLUGIN_ROOT=\"${CLAUDE_PLUGIN_ROOT:-./aidd}\" CLAUDE_PROJECT_DIR=\"${CLAUDE_PROJECT_DIR:-.}\" claude-workflow context-gc stop",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT:-./aidd}\"/hooks/gate-workflow.sh",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT:-./aidd}\"/hooks/gate-tests.sh",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT:-./aidd}\"/hooks/gate-qa.sh",
            "timeout": 60
          },
          {
            "type": "command",
            "command": "AIDD_TEST_PROFILE_DEFAULT=targeted \"${CLAUDE_PLUGIN_ROOT:-./aidd}\"/hooks/format-and-test.sh",
            "timeout": 900
          },
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT:-./aidd}\"/hooks/lint-deps.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "CLAUDE_PLUGIN_ROOT=\"${CLAUDE_PLUGIN_ROOT:-./aidd}\" CLAUDE_PROJECT_DIR=\"${CLAUDE_PROJECT_DIR:-.}\" claude-workflow context-gc stop",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
