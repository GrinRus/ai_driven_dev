{
  "hooks": {
    "PreCompact": [
      {
        "matcher": "auto|manual",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT:-./aidd}/scripts/context_gc/precompact_snapshot.py\"",
            "timeout": 8
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "startup|resume|clear|compact",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT:-./aidd}/scripts/context_gc/sessionstart_inject.py\"",
            "timeout": 5
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash|Read",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT:-./aidd}/scripts/context_gc/pretooluse_guard.py\"",
            "timeout": 2
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT:-./aidd}/scripts/context_gc/userprompt_guard.py\"",
            "timeout": 2
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT:-./aidd}\"/hooks/gate-workflow.sh",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT:-./aidd}\"/hooks/gate-tests.sh",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT:-./aidd}\"/hooks/gate-qa.sh",
            "timeout": 60
          },
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT:-./aidd}\"/hooks/format-and-test.sh",
            "timeout": 900
          },
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT:-./aidd}\"/hooks/lint-deps.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT:-./aidd}\"/hooks/gate-workflow.sh",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT:-./aidd}\"/hooks/gate-tests.sh",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT:-./aidd}\"/hooks/gate-qa.sh",
            "timeout": 60
          },
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT:-./aidd}\"/hooks/format-and-test.sh",
            "timeout": 900
          },
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT:-./aidd}\"/hooks/lint-deps.sh",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
