{
  "hooks": {
    "PreToolUse": [
      {
            "matcher": "Write|Edit",
            "hooks": [
              {
                "type": "command",
                "command": "\"${CLAUDE_PLUGIN_ROOT}\"/.claude/hooks/gate-workflow.sh",
                "timeout": 5
              },
              {
                "type": "command",
                "command": "\"${CLAUDE_PLUGIN_ROOT}\"/.claude/hooks/gate-prd-review.sh",
                "timeout": 5
              },
              {
                "type": "command",
                "command": "\"${CLAUDE_PLUGIN_ROOT}\"/.claude/hooks/gate-qa.sh",
                "timeout": 60
              },
              {
                "type": "command",
                "command": "\"${CLAUDE_PLUGIN_ROOT}\"/.claude/hooks/gate-tests.sh",
                "timeout": 5
              }
            ]
          }
        ],
        "UserPromptSubmit": [
          {
            "matcher": ".*",
            "hooks": [
              {
                "type": "command",
                "command": "\"${CLAUDE_PLUGIN_ROOT}\"/.claude/hooks/gate-workflow.sh",
                "timeout": 5
              }
            ]
          }
        ],
        "PostToolUse": [
          {
            "matcher": ".*",
            "hooks": [
              {
                "type": "command",
                "command": "\"${CLAUDE_PLUGIN_ROOT}\"/.claude/hooks/format-and-test.sh",
                "timeout": 900
              },
              {
                "type": "command",
                "command": "\"${CLAUDE_PLUGIN_ROOT}\"/.claude/hooks/lint-deps.sh",
                "timeout": 10
              }
            ]
          }
        ],
        "Stop": [
          {
            "matcher": ".*",
            "hooks": [
              {
                "type": "command",
                "command": "\"${CLAUDE_PLUGIN_ROOT}\"/.claude/hooks/gate-workflow.sh",
                "timeout": 5
              },
              {
                "type": "command",
                "command": "\"${CLAUDE_PLUGIN_ROOT}\"/.claude/hooks/format-and-test.sh",
                "timeout": 900
              },
              {
                "type": "command",
                "command": "\"${CLAUDE_PLUGIN_ROOT}\"/.claude/hooks/lint-deps.sh",
                "timeout": 10
              }
            ]
          }
        ],
        "SubagentStop": [
          {
            "matcher": ".*",
            "hooks": [
              {
                "type": "command",
                "command": "\"${CLAUDE_PLUGIN_ROOT}\"/.claude/hooks/gate-workflow.sh",
                "timeout": 5
              },
              {
                "type": "command",
                "command": "\"${CLAUDE_PLUGIN_ROOT}\"/.claude/hooks/format-and-test.sh",
                "timeout": 900
              },
              {
                "type": "command",
                "command": "\"${CLAUDE_PLUGIN_ROOT}\"/.claude/hooks/lint-deps.sh",
                "timeout": 10
              }
            ]
          }
        ]
      }
    }
