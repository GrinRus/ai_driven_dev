{
  "hooks": {
    "PreCompact": [
      {
        "matcher": "auto|manual",
        "hooks": [
          {
            "type": "command",
            "command": "PYTHONPATH=${CLAUDE_PLUGIN_ROOT:-.} python3 -m aidd_runtime.cli context-gc precompact",
            "timeout": 8
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "startup|resume|clear|compact",
        "hooks": [
          {
            "type": "command",
            "command": "PYTHONPATH=${CLAUDE_PLUGIN_ROOT:-.} python3 -m aidd_runtime.cli context-gc sessionstart",
            "timeout": 5
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash|Read",
        "hooks": [
          {
            "type": "command",
            "command": "PYTHONPATH=${CLAUDE_PLUGIN_ROOT:-.} python3 -m aidd_runtime.cli context-gc pretooluse",
            "timeout": 2
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "PYTHONPATH=${CLAUDE_PLUGIN_ROOT:-.} python3 -m aidd_runtime.cli context-gc userprompt",
            "timeout": 2
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "PYTHONPATH=${CLAUDE_PLUGIN_ROOT:-.} python3 -m aidd_runtime.cli context-gc stop",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT:-.}/hooks/gate-workflow.sh",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT:-.}/hooks/gate-tests.sh",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT:-.}/hooks/gate-qa.sh",
            "timeout": 60
          },
          {
            "type": "command",
            "command": "AIDD_TEST_PROFILE_DEFAULT=targeted ${CLAUDE_PLUGIN_ROOT:-.}/hooks/format-and-test.sh",
            "timeout": 900
          },
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT:-.}/hooks/lint-deps.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "PYTHONPATH=${CLAUDE_PLUGIN_ROOT:-.} python3 -m aidd_runtime.cli context-gc stop",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT:-.}/hooks/gate-workflow.sh",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT:-.}/hooks/gate-tests.sh",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT:-.}/hooks/gate-qa.sh",
            "timeout": 60
          },
          {
            "type": "command",
            "command": "AIDD_TEST_PROFILE_DEFAULT=fast ${CLAUDE_PLUGIN_ROOT:-.}/hooks/format-and-test.sh",
            "timeout": 900
          },
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT:-.}/hooks/lint-deps.sh",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
